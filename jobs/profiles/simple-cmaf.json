        "AudioSelectors": { "Audio Selector 1": { "DefaultSelection": "DEFAULT" } },
        "VideoSelector": { "Rotate": "AUTO" }
      }
    ],
    "OutputGroups": [
      {
        "Name": "CMAF Simple",
        "OutputGroupSettings": {
